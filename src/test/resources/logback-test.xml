<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="1 minutes">
    <appender name="TEST" class="ch.qos.logback.core.FileAppender">
        <append>false</append>
        <file>target/surefire-reports/mycash-test.log</file>

        <encoder>
            <pattern>%date %level [%thread] %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="dk.sunepoulsen.mycash" level="DEBUG">
        <appender-ref ref="TEST"/>
    </logger>

</configuration>
